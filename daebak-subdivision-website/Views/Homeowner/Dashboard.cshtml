@section Scripts {
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/fullcalendar@5.11.3/main.min.css">
    <script src="https://cdn.jsdelivr.net/npm/fullcalendar@5.11.3/main.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/fullcalendar@5.11.3/locales-all.min.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Setup notification functionality
            setupNotifications();
            
            // Setup announcements modal
            setupAnnouncementsModal();
            
            // Initialize calendar
            initializeCalendar();
            
            // Success toast auto-hide
            setTimeout(hideSuccessToast, 5000);

            // Document category handling
            const documentCategories = document.querySelectorAll('.document-category');
            documentCategories.forEach(category => {
                category.addEventListener('click', function(e) {
                    const categoryName = this.dataset.category;
                    // You can choose to either navigate to a documents page with filter
                    // or show a modal with documents in this category
                    
                    // Option 1: Open modal with documents (better UX)
                    e.preventDefault();
                    showDocumentsModal(categoryName);
                });
            });
        });

        // Calendar functionality
        function initializeCalendar() {
            const calendarEl = document.getElementById('calendar');
            const eventListEl = document.getElementById('event-list');
            
            if (!calendarEl) return;
            
            // Default events as fallback
            const defaultEvents = [
                { title: "Homeowners Meeting", start: "2025-04-15", color: "#FF9AA2" },
                { title: "Facility Maintenance", start: "2025-04-20", color: "#B5EAD7" },
                { title: "Community Clean-Up", start: "2025-04-25", color: "#C7CEEA" }
            ];
            
            try {
                // Use server events if available, otherwise default
                let events = defaultEvents;
                
                @if (ViewBag.Events != null)
                {
                    <text>
                    try {
                        const serverEvents = @Html.Raw(Json.Serialize(ViewBag.Events));
                        if (Array.isArray(serverEvents) && serverEvents.length > 0) {
                            // Process events to ensure they have all necessary properties
                            events = serverEvents.map(event => ({
                                id: event.id,
                                title: event.title,
                                description: event.description || '',
                                start: event.start,
                                end: event.end || event.start, // Fallback if no end date
                                location: event.location || '',
                                color: event.color
                            }));
                        }
                    } catch (e) {
                        console.error("Error processing server events:", e);
                    }
                    </text>
                }
                
                // Basic calendar configuration
                const calendar = new FullCalendar.Calendar(calendarEl, {
                    initialView: 'dayGridMonth',
                    initialDate: new Date(),
                    headerToolbar: {
                        left: 'prev,next today',
                        center: 'title',
                        right: 'dayGridMonth,timeGridWeek'
                    },
                    height: 'auto',
                    events: events,
                    dayMaxEvents: 3,
                    eventClick: function(info) {
                        // Show event details when clicked (optional)
                        alert(`Event: ${info.event.title}\n${info.event.extendedProps.description || 'No description'}\nLocation: ${info.event.extendedProps.location || 'No location specified'}`);
                    }
                });
                
                calendar.render();
                
                // Update event list
                if (eventListEl) {
                    updateEventList(eventListEl, events);
                }
            } catch (error) {
                console.error("Calendar error:", error);
                calendarEl.innerHTML = '<div class="p-4 text-red-500">Calendar could not be loaded</div>';
                
                if (eventListEl) {
                    updateEventList(eventListEl, defaultEvents);
                }
            }
        }
        
        function updateEventList(eventListEl, events) {
            if (!eventListEl || !events) return;
            
            // Clear list
            eventListEl.innerHTML = '';
            
            // No events message
            if (events.length === 0) {
                eventListEl.innerHTML = `
                    <li class="p-3 border border-gray-200 rounded-lg">
                        <div class="text-center text-gray-500">
                            <i class="ph ph-calendar text-2xl mb-2"></i>
                            <p>No upcoming events.</p>
                        </div>
                    </li>
                `;
                return;
            }
            
            // Sort and filter upcoming events
            events.sort((a, b) => new Date(a.start) - new Date(b.start));
            const today = new Date();
            const upcomingEvents = events.filter(event => new Date(event.start) >= today);
            const displayEvents = upcomingEvents.length > 0 ? upcomingEvents.slice(0, 5) : events.slice(0, 5); // Show max 5 events
            
            // Display events
            displayEvents.forEach(event => {
                const eventDate = new Date(event.start);
                const formattedDate = eventDate.toLocaleDateString('en-US', {
                    month: 'short',
                    day: 'numeric'
                });
                
                const formattedTime = eventDate.toLocaleTimeString('en-US', {
                    hour: '2-digit',
                    minute: '2-digit'
                });
                
                let icon = 'ph-calendar-check';
                if (event.title.toLowerCase().includes('meeting')) icon = 'ph-users';
                else if (event.title.toLowerCase().includes('maintenance')) icon = 'ph-wrench';
                else if (event.title.toLowerCase().includes('clean')) icon = 'ph-broom';
                else if (event.title.toLowerCase().includes('easter')) icon = 'ph-egg';
                
                const li = document.createElement('li');
                li.className = 'p-3 rounded-lg border-l-4 transition-all hover:bg-gray-50';
                li.style.borderLeftColor = event.color || '#94B0DF';
                li.innerHTML = `
                    <div class="flex items-center">
                        <div class="text-center mr-3 bg-gray-50 rounded-full h-10 w-10 flex items-center justify-center">
                            <span class="block text-sm font-bold text-gray-600">${formattedDate}</span>
                        </div>
                        <div>
                            <p class="font-medium flex items-center">
                                <i class="ph ${icon} mr-2" style="color: ${event.color || '#94B0DF'}"></i>
                                ${event.title}
                            </p>
                            <div class="flex items-center text-xs text-gray-500 mt-1">
                                <i class="ph ph-clock text-gray-400 mr-1"></i>
                                <span>${formattedTime}</span>
                            </div>
                            ${event.location ? `
                            <div class="flex items-center text-xs text-gray-500 mt-1">
                                <i class="ph ph-map-pin text-gray-400 mr-1"></i>
                                <span>${event.location}</span>
                            </div>` : ''}
                        </div>
                    </div>
                `;
                eventListEl.appendChild(li);
            });
        }
        
        function setupNotifications() {
            const notificationBtn = document.getElementById('notification-toggle-btn');
            const notificationDropdown = document.getElementById('notification-dropdown');
            
            if (notificationBtn && notificationDropdown) {
                notificationBtn.addEventListener('click', function() {
                    notificationDropdown.classList.toggle('hidden');
                });
                
                document.addEventListener('click', function(event) {
                    if (!notificationBtn.contains(event.target) && !notificationDropdown.contains(event.target)) {
                        notificationDropdown.classList.add('hidden');
                    }
                });
            }
        }
        
        function setupAnnouncementsModal() {
            const announcementsModal = document.getElementById('announcements-modal');
            const viewAllAnnouncementsBtn = document.getElementById('view-all-announcements');
            const closeAnnouncementsModalBtn = document.getElementById('close-announcements-modal');
            
            if (viewAllAnnouncementsBtn && announcementsModal && closeAnnouncementsModalBtn) {
                viewAllAnnouncementsBtn.addEventListener('click', function() {
                    announcementsModal.classList.remove('hidden');
                    document.body.style.overflow = 'hidden';
                });
                
                closeAnnouncementsModalBtn.addEventListener('click', function() {
                    announcementsModal.classList.add('hidden');
                    document.body.style.overflow = '';
                });
                
                announcementsModal.addEventListener('click', function(e) {
                    if (e.target === announcementsModal) {
                        announcementsModal.classList.add('hidden');
                        document.body.style.overflow = '';
                    }
                });
            }
        }
        
        function hideSuccessToast() {
            const successToast = document.getElementById('success-toast');
            if (successToast) {
                successToast.classList.add('hidden');
            }
        }

        // Function to display documents modal
        function showDocumentsModal(category) {
            console.log("Opening documents modal for:", category);

            // Create loading indicator
            const loadingModal = document.createElement('div');
            loadingModal.id = 'loading-documents-modal';
            loadingModal.className = 'fixed inset-0 bg-black bg-opacity-50 flex items-center justify-center z-50';
            loadingModal.innerHTML = `
                <div class="bg-white rounded-xl shadow-xl p-8 flex flex-col items-center">
                    <div class="animate-spin rounded-full h-12 w-12 border-t-2 border-b-2 border-tertiary mb-4"></div>
                    <p class="text-gray-700">Loading documents...</p>
                </div>
            `;
            document.body.appendChild(loadingModal);
            document.body.style.overflow = 'hidden';

            // Category display name mapping
            const categoryNames = {
                'MANUAL': 'Homeowner\'s Manual',
                'GUIDELINE': 'Community Guidelines',
                'FORM': 'Visitor Request Form',
                'MAP': 'Community Map'
            };

            // Handle existing modals
            const existingModal = document.getElementById('documents-modal');
            if (existingModal) {
                existingModal.remove();
            }

            // Fetch documents for the category
            fetch(`/Documents/GetDocumentsByCategory?category=${encodeURIComponent(category)}`, {
                method: 'GET',
                headers: {
                    'Accept': 'application/json',
                    'X-Requested-With': 'XMLHttpRequest'
                }
            })
            .then(response => {
                if (!response.ok) {
                    throw new Error(`Server returned ${response.status}`);
                }
                return response.json();
            })
            .then(result => {
                // Remove loading indicator
                const loadingIndicator = document.getElementById('loading-documents-modal');
                if (loadingIndicator) {
                    loadingIndicator.remove();
                }
                
                if (result && result.success === true && Array.isArray(result.data)) {
                    const documents = result.data;
                    
                    // Create modal content
                    let modalHTML = `
                    <div id="documents-modal" class="fixed inset-0 bg-black bg-opacity-50 flex items-center justify-center z-50">
                        <div class="bg-white rounded-xl shadow-xl w-full max-w-4xl max-h-[90vh] overflow-hidden flex flex-col">
                            <div class="p-6 border-b border-gray-100 flex items-center justify-between">
                                <div class="flex items-center gap-2">
                                    <i class="ph ph-file-text text-xl text-tertiary"></i>
                                    <h3 class="font-semibold text-xl text-tertiary">${categoryNames[category] || category}</h3>
                                </div>
                                <button id="close-documents-modal" class="text-gray-500 hover:text-gray-700 focus:outline-none">
                                    <i class="ph ph-x text-xl"></i>
                                </button>
                            </div>
                            <div class="p-6 overflow-y-auto">`;
                    
                    if (documents.length === 0) {
                        modalHTML += `<p class="text-center text-gray-500 py-8">No documents available in this category.</p>`;
                    } else {
                        modalHTML += `<div class="grid grid-cols-1 md:grid-cols-2 gap-4">`;
                        documents.forEach(doc => {
                            // Get file extension to determine icon
                            const filePath = doc.filePath || '';
                            const extension = filePath.split('.').pop().toLowerCase();
                            let iconClass = 'ph-file-text text-gray-500';
                            
                            if (extension === 'pdf') iconClass = 'ph-file-pdf text-red-500';
                            else if (['doc', 'docx'].includes(extension)) iconClass = 'ph-file-doc text-blue-500';
                            else if (['xls', 'xlsx'].includes(extension)) iconClass = 'ph-file-xls text-green-500';
                            else if (['jpg', 'jpeg', 'png'].includes(extension)) iconClass = 'ph-image text-purple-500';
                            
                            // Format file size if not provided
                            const fileSize = doc.formattedFileSize || formatFileSize(doc.fileSize);
                            
                            modalHTML += `
                            <a href="/Documents/Download/${doc.documentId}" target="_blank" class="border border-gray-200 rounded-lg p-4 flex items-start gap-3 hover:bg-gray-50 transition-colors">
                                <div class="flex-shrink-0">
                                    <i class="ph ${iconClass} text-2xl"></i>
                                </div>
                                <div>
                                    <h4 class="font-medium">${doc.title || 'Untitled Document'}</h4>
                                    <p class="text-sm text-gray-500">${doc.description || ''}</p>
                                    <span class="text-xs text-gray-400 mt-2 block">${fileSize}</span>
                                </div>
                            </a>`;
                        });
                        modalHTML += `</div>`;
                    }
                    
                    modalHTML += `
                            </div>
                        </div>
                    </div>`;
                    
                    // Insert modal into DOM
                    const modalContainer = document.createElement('div');
                    modalContainer.innerHTML = modalHTML;
                    document.body.appendChild(modalContainer.firstChild);
                    
                    // Add event listeners for modal
                    document.getElementById('close-documents-modal').addEventListener('click', function() {
                        document.getElementById('documents-modal').remove();
                        document.body.style.overflow = '';
                    });
                    
                    document.getElementById('documents-modal').addEventListener('click', function(e) {
                        if (e.target === this) {
                            this.remove();
                            document.body.style.overflow = '';
                        }
                    });
                } else {
                    showErrorModal('No documents found or invalid data format.');
                }
            })
            .catch(error => {
                console.error('Fetch error:', error);
                document.getElementById('loading-documents-modal')?.remove();
                showErrorModal('Error loading documents. Please try again later.');
            });
        }

        // Helper function to format file size
        function formatFileSize(bytes) {
            if (!bytes || bytes === 0) return '0 B';
            const sizes = ['B', 'KB', 'MB', 'GB', 'TB'];
            const i = Math.floor(Math.log(bytes) / Math.log(1024));
            return `${(bytes / Math.pow(1024, i)).toFixed(2)} ${sizes[i]}`;
        }

        // Show error modal
        function showErrorModal(message) {
            const errorModal = document.createElement('div');
            errorModal.className = 'fixed inset-0 bg-black bg-opacity-50 flex items-center justify-center z-50';
            errorModal.innerHTML = `
                <div class="bg-white rounded-xl shadow-xl p-8 max-w-md w-full">
                    <div class="flex items-center justify-center text-red-500 mb-4">
                        <i class="ph ph-warning text-4xl"></i>
                    </div>
                    <h3 class="text-xl font-medium text-center mb-2">Error</h3>
                    <p class="text-gray-600 text-center mb-6">${message}</p>
                    <div class="flex justify-center">
                        <button class="px-4 py-2 bg-tertiary text-white rounded-lg hover:bg-tertiary/90 transition-colors error-close-btn">
                            OK
                        </button>
                    </div>
                </div>
            `;
            document.body.appendChild(errorModal);
            document.body.style.overflow = 'hidden';
            
            errorModal.querySelector('.error-close-btn').addEventListener('click', function() {
                errorModal.remove();
                document.body.style.overflow = '';
            });
            
            errorModal.addEventListener('click', function(e) {
                if (e.target === errorModal) {
                    errorModal.remove();
                    document.body.style.overflow = '';
                }
            });
        }
    </script>
}