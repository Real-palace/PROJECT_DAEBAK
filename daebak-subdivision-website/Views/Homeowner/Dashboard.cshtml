        </div>
        <a href="@Url.Action("Bills", "Home")" class="ml-auto text-blue-500 hover:bg-blue-50 p-2 rounded-full transition-colors">
            <i class="ph ph-arrow-right text-xl"></i>
        </a>
    </div>

