@model ErrorViewModel
@{
    ViewData["Title"] = "Error";
}

<div class="container mx-auto px-4 py-8">
    <div class="bg-white rounded-lg shadow-lg p-6 max-w-lg mx-auto">
        <div class="text-center">
            <h1 class="text-4xl font-bold text-red-600 mb-4">Error</h1>
            <div class="mb-4 text-gray-700">
                <p>Sorry, an error occurred while processing your request.</p>
            </div>
            
            @if (Model != null && !string.IsNullOrEmpty(Model.RequestId))
            {
                <p class="text-gray-500">
                    <strong>Request ID:</strong> <code>@Model.RequestId</code>
                </p>
            }
            
            <div class="mt-6">
                <a href="@Url.Action("Home", "Home")" class="bg-blue-500 hover:bg-blue-600 text-white font-semibold py-2 px-4 rounded">
                    Return to Home
                </a>
            </div>
        </div>
    </div>
</div>
