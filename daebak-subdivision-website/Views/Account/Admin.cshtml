@model daebak_subdivision_website.Models.AdminPageModel
@{
    ViewData["Title"] = "Admin Dashboard";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <!-- Add Tailwind CSS -->
    <script src="https://cdn.tailwindcss.com"></script>
    <!-- Add Chart.js for data visualization -->
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <!-- Import Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&family=Dancing+Script:wght@600&display=swap" rel="stylesheet">
    <!-- Tailwind Custom Configuration -->
    <script>
        tailwind.config = {
            theme: {
                extend: {
                    colors: {
                        primary: '#94B0DF',
                        secondary: '#356480',
                        tertiary: '#2c3e50',
                        light: '#FCFDFF',
                    }
                },
                fontFamily: {
                    sans: ['Poppins', 'sans-serif'],
                },
            },
        };
    </script>
    <!-- FontAwesome for icons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
</head>
<body class="font-sans bg-light min-h-screen text-gray-800">

    <!-- Navigation Bar -->
    <nav class="bg-primary text-white w-full shadow-md">
        <div class="container mx-auto px-6 py-4 flex justify-between items-center">
            <div class="flex items-center space-x-3">
                <img src="@Url.Content("~/images/daebak_logo.png")" alt="Daebak Logo" class="w-10">
                <h1 class="text-xl font-bold tracking-wide">Daebak Admin Dashboard</h1>
            </div>
            <div class="space-x-6 text-sm flex items-center">
                <a asp-controller="Account" asp-action="AdminPage" class="hover:text-secondary font-medium transition duration-200">Home</a>


                <!-- Management Dropdown -->
                <div class="relative">
                    <button id="management-btn" class="hover:text-secondary font-medium transition duration-200 flex items-center">
                        Management <i class="fas fa-chevron-down ml-2"></i>
                    </button>
                    <div id="management-dropdown" class="absolute left-0 mt-2 w-56 bg-white text-gray-800 shadow-md rounded-md hidden transition-all duration-300 z-50">
                        <a asp-controller="UserManagement" asp-action="Index" class="block px-4 py-2 hover:bg-gray-200">USERS</a>
                        <a asp-controller="Community" asp-action="Index" class="block px-4 py-2 hover:bg-gray-200">COMMUNITY</a>
                        <a asp-controller="ServiceRequests" asp-action="Index" class="block px-4 py-2 hover:bg-gray-200">SERVICES</a>
                        <a asp-controller="Billing" asp-action="Index" class="block px-4 py-2 hover:bg-gray-200">BILLS AND PAYMENTS</a>
                        <a asp-controller="Security" asp-action="Index" class="block px-4 py-2 hover:bg-gray-200">SECURITY</a>
                        <a asp-controller="Documents" asp-action="Index" class="block px-4 py-2 hover:bg-gray-200">DOCUMENT</a>
                    </div>
                </div>

                <a asp-controller="Notifications" asp-action="Index" class="hover:text-secondary font-medium transition duration-200">Notifications</a>
                <a asp-controller="Settings" asp-action="Index" class="hover:text-secondary font-medium transition duration-200">Settings</a>
                <a asp-controller="Account" asp-action="Logout" class="text-accent hover:text-white font-medium transition duration-200">Logout</a>
            </div>
        </div>
    </nav>

    <!-- Interactive Cards Section -->
    <div class="container mx-auto grid grid-cols-1 md:grid-cols-3 gap-4 mt-8">
        <div class="bg-primary text-white shadow-lg rounded-lg p-6 hover:bg-secondary transition transform hover:scale-105">
            <h3 class="text-lg font-semibold mb-2 flex items-center">
                <i class="fas fa-bullhorn mr-2"></i> Total Announcements
            </h3>
            <p class="text-3xl font-bold">25</p>
        </div>
        <div class="bg-secondary text-white shadow-lg rounded-lg p-6 hover:bg-tertiary transition transform hover:scale-105">
            <h3 class="text-lg font-semibold mb-2 flex items-center">
                <i class="fas fa-calendar-alt mr-2"></i> Active Events
            </h3>
            <p class="text-3xl font-bold">7</p>
        </div>
        <div class="bg-tertiary text-white shadow-lg rounded-lg p-6 hover:bg-primary transition transform hover:scale-105">
            <h3 class="text-lg font-semibold mb-2 flex items-center">
                <i class="fas fa-tools mr-2"></i> Pending Service Requests
            </h3>
            <p class="text-3xl font-bold">12</p>
        </div>
    </div>

    <!-- Main Charts Section -->
    <div class="container mx-auto py-8 grid grid-cols-2 gap-8">
        <div class="bg-white shadow-md rounded-lg p-6 hover:shadow-xl transition duration-300">
            <h2 class="text-md font-semibold text-gray-800 mb-4 text-center flex items-center">
                <i class="fas fa-user-shield mr-2 text-secondary"></i> User Role Distribution
            </h2>
            <canvas id="roleChart" class="h-36"></canvas>
        </div>
        <div class="bg-white shadow-md rounded-lg p-6 hover:shadow-xl transition duration-300">
            <h2 class="text-md font-semibold text-gray-800 mb-4 text-center flex items-center">
                <i class="fas fa-wallet mr-2 text-secondary"></i> Bill Payment Status
            </h2>
            <canvas id="billPaymentStatusChart" class="h-36"></canvas>
        </div>
    </div>

    <!-- Chart.js Scripts -->
    <script>
        // User Role Distribution Chart
        new Chart(document.getElementById('roleChart').getContext('2d'), {
            type: 'pie',
            data: { labels: ['Admin', 'Manager', 'User'], datasets: [{ data: [10, 15, 25], backgroundColor: ['#A9DEF9', '#FFBCBC', '#B7E4C7'] }] },
            options: { responsive: true, plugins: { legend: { position: 'top' } } }
        });

        // Bill Payment Status Chart
        new Chart(document.getElementById('billPaymentStatusChart').getContext('2d'), {
            type: 'doughnut',
            data: { labels: ['Paid', 'Pending', 'Overdue'], datasets: [{ data: [50, 35, 15], backgroundColor: ['#559C5F', '#FFD166', '#EF476F'] }] },
            options: { responsive: true, plugins: { legend: { position: 'top' } } }
        });
    </script>

</body>
</html>
<script src="~/js/site.js"></script>
