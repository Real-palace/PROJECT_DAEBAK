@model IEnumerable<Announcement>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Announcements - DAEBAK</title>

    <!-- Add Tailwind CSS and DaisyUI CDN -->
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://cdn.jsdelivr.net/npm/daisyui@4.7.2/dist/full.min.css" rel="stylesheet" type="text/css" />

    <!-- Remove this line -->
    <!-- Configure Tailwind -->
    <script>
        tailwind.config = {
            theme: {
                extend: {
                    colors: {
                        primary: '#356480',
                        secondary: '#2c3e50',
                        light: '#FCFDFF',
                        tertiary: '#356480'
                    }
                },
                fontFamily: {
                    sans: ['Poppins', 'sans-serif'],
                }
            },
            plugins: [require("daisyui")],
        }
    </script>

    <!-- Add Poppins font -->
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600&display=swap" rel="stylesheet">
</head>
<!-- Update the body section -->
<body class="font-sans bg-light flex min-h-screen">
    <!-- Sidebar -->
    <div class="fixed top-0 left-0 h-screen w-20 bg-[#356480] flex flex-col items-center justify-between py-5 shadow-md z-10">
        <!-- Logo -->
        <div class="w-full flex justify-center py-4">
            <img src="~/images/daebak_logo.png" alt="Subdivision Logo" class="w-12 h-auto">
        </div>

        <!-- Menu Items -->
        <div class="flex flex-col items-center gap-5">
            <!-- Dashboard -->
            <a href="@Url.Action("Home", "Home")" class="relative w-full h-14 flex justify-center items-center text-white text-2xl hover:text-tertiary transition-colors group" title="Dashboard">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6" />
                </svg>
            </a>

            <!-- Announcements -->
            <a href="@Url.Action("Index", "Announcements")" class="relative w-full h-14 flex justify-center items-center text-white text-2xl hover:text-tertiary transition-colors group" title="Announcements">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5.882V19.24a1.76 1.76 0 01-3.417.592l-2.147-6.15M18 13a3 3 0 100-6M5.436 13.683A4.001 4.001 0 017 6h1.832c4.1 0 7.625-1.234 9.168-3v14c-1.543-1.766-5.067-3-9.168-3H7a3.988 3.988 0 01-1.564-.317z" />
                </svg>
            </a>

            <!-- Billing -->
            <a href="@Url.Action("Billing", "Home")" class="relative w-full h-14 flex justify-center items-center text-white text-2xl hover:text-tertiary transition-colors group" title="Billing & Payments">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 10h18M7 15h1m4 0h1m-7 4h12a3 3 0 003-3V8a3 3 0 00-3-3H6a3 3 0 00-3 3v8a3 3 0 003 3z" />
                </svg>
            </a>

            <!-- Facilities -->
            <a href="@Url.Action("Facilities", "Home")" class="relative w-full h-14 flex justify-center items-center text-white text-2xl hover:text-tertiary transition-colors group" title="Facilities">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4" />
                </svg>
            </a>

            <!-- Services -->
            <a href="@Url.Action("Services", "Home")" class="relative w-full h-14 flex justify-center items-center text-white text-2xl hover:text-tertiary transition-colors group" title="Services">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996-.608 2.296-.07 2.572 1.065z" />
                </svg>
            </a>

            <!-- Security -->
            <a href="@Url.Action("Security", "Home")" class="relative w-full h-14 flex justify-center items-center text-white text-2xl hover:text-tertiary transition-colors group" title="Security">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" />
                </svg>
            </a>
        </div>

        <!-- User Profile and Logout -->
        <div class="flex flex-col items-center gap-3">
            <a href="@Url.Action("Logout", "Account")" class="w-full h-14 flex justify-center items-center text-white text-2xl hover:text-tertiary transition-colors" title="Logout">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1" />
                </svg>
            </a>
        </div>
    </div>

    <!-- Replace the Top Navigation Bar section -->
    <div class="ml-20 flex-1 min-h-screen bg-gradient-to-r from-light to-blue-100">
        <!-- Top Navigation Bar -->
        <div class="bg-white shadow-sm sticky top-0 z-10 w-screen ml-20">
            <!-- Changed w-full to w-screen -->
            <div class="px-8 py-4 flex justify-between items-center">
                <div class="flex items-center">
                    <h1 class="text-2xl font-semibold text-tertiary">Community Announcements</h1>
                </div>

                <div class="flex items-center gap-8">
                    <!-- Search Bar -->
                    <div class="relative w-96">
                        <input type="text"
                               placeholder="Search..."
                               class="w-full pl-10 pr-4 py-2 border rounded-lg focus:ring-2 focus:ring-primary focus:border-primary">
                        <span class="absolute inset-y-0 left-3 flex items-center text-gray-400">
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
                            </svg>
                        </span>
                    </div>

                    <!-- Notifications -->
                    <div class="relative">
                        <button class="relative p-2 text-gray-700 hover:bg-gray-100 rounded-full transition-colors">
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 17h5l-1.405-1.405A2.032 2.032 0 0118 14.158V11a6.002 6.002 0 00-4-5.659V5a2 2 0 10-4 0v.341C7.67 6.165 6 8.388 6 11v3.159c0 .538-.214 1.055-.595 1.436L4 17h5m6 0v1a3 3 0 11-6 0v-1m6 0H9" />
                            </svg>
                            <span class="absolute top-0 right-0 bg-red-500 text-white text-xs w-5 h-5 flex items-center justify-center rounded-full">3</span>
                        </button>
                    </div>

                    <!-- Admin Profile -->
                    <div class="flex items-center gap-3">
                        <span class="text-sm font-medium text-gray-700">Administrator</span>
                        <div class="w-10 h-10 bg-primary/20 rounded-full flex items-center justify-center">
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-primary" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
                            </svg>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Main Content -->
        <div class="flex-grow p-8">
            <!-- Changed padding and removed constraints -->
            <!-- Quick Actions -->
            <div class="mb-8">
                <div class="flex justify-between items-center">
                    <div class="flex gap-3">
                        <button class="px-4 py-2 text-primary border border-primary rounded-lg hover:bg-primary/10 transition-colors flex items-center gap-2">
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 10v6m0 0l-3-3m3 3l3-3m2 8H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
                            </svg>
                            Export to PDF
                        </button>
                    </div>

                    <!-- View Options -->
                    <div class="flex gap-2">
                        <button class="p-2 text-gray-600 hover:bg-gray-100 rounded-lg">
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 10h16M4 14h16M4 18h16" />
                            </svg>
                        </button>
                        <button class="p-2 text-gray-600 hover:bg-gray-100 rounded-lg">
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6a2 2 0 012-2h14a2 2 0 012 2v14a2 2 0 01-2 2H6a2 2 0 01-2-2V6z" />
                            </svg>
                        </button>
                    </div>
                </div>
            </div>

            <!-- Announcements Filter -->
            <div class="mb-8 flex justify-center gap-3">
                <button class="px-4 py-2 rounded-full bg-primary text-white hover:bg-primary/90 transition-colors">
                    All
                </button>
                <button class="px-4 py-2 rounded-full bg-white text-gray-600 hover:bg-gray-50 transition-colors">
                    Notices
                </button>
                <button class="px-4 py-2 rounded-full bg-white text-gray-600 hover:bg-gray-50 transition-colors">
                    Events
                </button>
                <button class="px-4 py-2 rounded-full bg-white text-gray-600 hover:bg-gray-50 transition-colors">
                    Maintenance
                </button>
            </div>

            <!-- Enhanced Announcement Cards -->
            <div class="grid grid-cols-1 md:grid-cols-2 2xl:grid-cols-3 gap-6 auto-rows-fr">
                <!-- Updated grid -->
                @foreach (var announcement in Model.OrderByDescending(a => a.CREATED_AT))
                {
                    <div class="bg-white rounded-xl shadow-sm hover:shadow-lg transition-shadow h-full">
                        <!-- Added h-full -->
                        <div class="p-8 flex flex-col h-full">
                            <!-- Updated padding and added flex structure -->
                            <!-- Header -->
                            <div class="flex items-center justify-between mb-6">
                                <div class="flex items-center gap-2">
                                    <span class="px-2.5 py-0.5 rounded-full text-xs font-medium
                                        @(announcement.Category == "NOTICE" ? "bg-blue-100 text-blue-800" :
                                          announcement.Category == "EVENT" ? "bg-green-100 text-green-800" :
                                          announcement.Category == "MAINTENANCE" ? "bg-yellow-100 text-yellow-800" :
                                          "bg-gray-100 text-gray-800")">
                                        @(announcement.Category ?? "Notice")
                                    </span>
                                    @if ((DateTime.Now - announcement.CREATED_AT).TotalDays <= 3)
                                    {
                                        <span class="px-2 py-0.5 bg-red-100 text-red-800 text-xs font-medium rounded-full">New</span>
                                    }
                                </div>
                            </div>

                            <!-- Content -->
                            <div class="flex-grow">
                                <!-- Added flex-grow to allow content expansion -->
                                <h2 class="text-2xl font-semibold text-gray-800 mb-4 line-clamp-2">@announcement.TITLE</h2>
                                <div class="prose prose-lg text-gray-600 mb-6 line-clamp-4">
                                    @Html.Raw(announcement.CONTENT)
                                </div>
                            </div>

                            <!-- Footer -->
                            <div class="pt-6 border-t border-gray-100 mt-auto">
                                <!-- Added mt-auto -->
                                <div class="flex items-center justify-between pt-3 border-t border-gray-100">
                                    <div class="flex items-center gap-2">
                                        <div class="w-6 h-6 bg-primary/20 rounded-full flex items-center justify-center">
                                            <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 text-primary" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
                                            </svg>
                                        </div>
                                        <span class="text-xs text-gray-500">
                                            @announcement.CREATED_AT.ToString("MMM dd, yyyy")
                                        </span>
                                    </div>
                                    <button class="text-primary hover:text-primary/80 text-sm font-medium flex items-center gap-1">
                                        Read more
                                        <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                                        </svg>
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>

        <!-- Footer -->
        @if (!Model.Any())
        {
            <div class="text-center py-12">
                <div class="w-16 h-16 bg-gray-100 rounded-full flex items-center justify-center mx-auto mb-4">
                    <i class="ph ph-megaphone text-2xl text-gray-400"></i>
                </div>
                <h3 class="text-lg font-medium text-gray-900">No announcements yet</h3>
                <p class="mt-1 text-sm text-gray-500">Check back later for community updates.</p>
            </div>
        }

        <!-- Enhanced Pagination -->
        @if (Model.Count() > 10)
        {
            <div class="mt-8 flex justify-center">
                <nav class="flex items-center gap-2">
                    <button class="p-2 rounded-md hover:bg-primary/10 text-primary">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
                        </svg>
                    </button>
                    <div class="flex gap-1">
                        <button class="px-4 py-2 rounded-md bg-primary text-white">1</button>
                        <button class="px-4 py-2 rounded-md hover:bg-primary/10 text-primary">2</button>
                        <button class="px-4 py-2 rounded-md hover:bg-primary/10 text-primary">3</button>
                        <span class="px-4 py-2">...</span>
                        <button class="px-4 py-2 rounded-md hover:bg-primary/10 text-primary">10</button>
                    </div>
                    <button class="p-2 rounded-md hover:bg-primary/10 text-primary">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                        </svg>
                    </button>
                </nav>
            </div>
        }
    </div>
    </div>
</body>
</html>