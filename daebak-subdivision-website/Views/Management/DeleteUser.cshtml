@model daebak_subdivision_website.Models.UserViewModel

<div class="min-h-screen bg-cover bg-center font-sans" style="background-image: url('/images/HOME6.jpg');">
    <div class="flex justify-center items-center h-full">
        <div class="w-full max-w-lg bg-white rounded-xl shadow-lg px-8 py-10 relative">
            <!-- Decorative Floating Shapes -->
            <div class="absolute top-0 left-1/4 w-40 h-40 bg-primary/10 rounded-full floating-shape"></div>
            <div class="absolute bottom-0 right-1/4 w-60 h-60 bg-primary/10 rounded-full floating-shape-delay-1"></div>

            <!-- Page Title -->
            <h2 class="text-2xl font-semibold text-center text-tertiary mb-6">Delete User</h2>

            <!-- Confirmation Message -->
            <h3 class="text-lg text-center text-gray-700 font-medium mb-4">
                Are you sure you want to delete this user?
            </h3>

            <!-- User Details -->
            <div class="mb-6">
                <h4 class="text-sm font-semibold text-tertiary mb-2">User Details</h4>
                <hr class="mb-4 border-gray-300" />
                <dl class="space-y-4">
                    <div class="grid grid-cols-3 items-center">
                        <dt class="text-sm font-medium text-gray-600">Username:</dt>
                        <dd class="col-span-2 text-sm text-gray-800">@Html.DisplayFor(model => model.Username)</dd>
                    </div>
                    <div class="grid grid-cols-3 items-center">
                        <dt class="text-sm font-medium text-gray-600">Email:</dt>
                        <dd class="col-span-2 text-sm text-gray-800">@Html.DisplayFor(model => model.Email)</dd>
                    </div>
                </dl>
            </div>

            <!-- Action Buttons -->
            <form asp-action="DeleteUserConfirmed" asp-controller="UserManagement" method="post">
                <input type="hidden" asp-for="Id" />
                <div class="flex justify-between items-center space-x-4">
                    <!-- Delete Button -->
                    <button type="submit"
                            class="w-full bg-red-500 text-white py-3 rounded-full font-medium hover:bg-red-600 transition duration-200">
                        Delete
                    </button>

                    <!-- Back to List Button -->
                    <a asp-action="Index"
                       class="w-full text-center bg-gray-300 text-gray-800 py-3 rounded-full font-medium hover:bg-gray-400 transition duration-200">
                        Back to List
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>


