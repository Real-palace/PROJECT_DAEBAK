@model daebak_subdivision_website.Models.UserViewModel
@{
    ViewData["Title"] = "Edit User";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <script>
        tailwind.config = {
            theme: {
                extend: {
                    colors: {
                        primary: '#009879',
                        secondary: '#356480',
                    }
                }
            }
        }
    </script>
</head>
<body class="bg-gray-100">
    <div class="min-h-screen py-12 bg-cover bg-center bg-no-repeat"
         style="background-image: linear-gradient(rgba(0, 0, 0, 0.5), rgba(0, 0, 0, 0.5)), url('/images/HOME6.jpg')">

        <div class="max-w-4xl mx-auto px-4">
            <!-- Form Card -->
            <div class="bg-white/95 backdrop-blur-sm rounded-2xl shadow-xl p-8">
                <!-- Header -->
                <div class="mb-8">
                    <h2 class="text-2xl font-bold text-gray-800 text-center">Edit User</h2>
                    <p class="text-gray-600 text-center mt-2">Update user account details</p>
                </div>

                <form asp-action="EditUser" method="post" class="space-y-8">
                    <input type="hidden" asp-for="Id" />

                    <!-- Basic Information -->
                    <div class="space-y-4">
                        <h3 class="text-lg font-semibold text-gray-700 border-b pb-2">Basic Information</h3>

                        <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
                            <div class="col-span-3">
                                <label asp-for="Username" class="block text-sm font-medium text-gray-700 mb-1">Username <span class="text-red-500">*</span></label>
                                <input asp-for="Username" required
                                       class="w-full px-4 py-2.5 rounded-lg border border-gray-300 focus:ring-2 focus:ring-primary focus:border-primary"
                                       placeholder="Enter username">
                                <span asp-validation-for="Username" class="text-sm text-red-500"></span>
                            </div>
                            <div>
                                <label asp-for="FirstName" class="block text-sm font-medium text-gray-700 mb-1">First Name <span class="text-red-500">*</span></label>
                                <input asp-for="FirstName" required
                                       class="w-full px-4 py-2.5 rounded-lg border border-gray-300 focus:ring-2 focus:ring-primary focus:border-primary"
                                       placeholder="Enter first name">
                                <span asp-validation-for="FirstName" class="text-sm text-red-500"></span>
                            </div>
                            <div>
                                <label asp-for="LastName" class="block text-sm font-medium text-gray-700 mb-1">Last Name <span class="text-red-500">*</span></label>
                                <input asp-for="LastName" required
                                       class="w-full px-4 py-2.5 rounded-lg border border-gray-300 focus:ring-2 focus:ring-primary focus:border-primary"
                                       placeholder="Enter last name">
                                <span asp-validation-for="LastName" class="text-sm text-red-500"></span>
                            </div>
                            <div>
                                <label asp-for="Role" class="block text-sm font-medium text-gray-700 mb-1">Role <span class="text-red-500">*</span></label>
                                <select asp-for="Role" required
                                        class="w-full px-4 py-2.5 rounded-lg border border-gray-300 focus:ring-2 focus:ring-primary focus:border-primary">
                                    <option value="">Select Role</option>
                                    <option value="Homeowner">Homeowner</option>
                                    <option value="Staff">Staff</option>
                                    <option value="Admin">Admin</option>
                                </select>
                                <span asp-validation-for="Role" class="text-sm text-red-500"></span>
                            </div>
                        </div>
                    </div>

                    <!-- Contact Information -->
                    <div class="space-y-4">
                        <h3 class="text-lg font-semibold text-gray-700 border-b pb-2">Contact Information</h3>

                        <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
                            <div>
                                <label asp-for="Email" class="block text-sm font-medium text-gray-700 mb-1">Email <span class="text-red-500">*</span></label>
                                <input asp-for="Email" type="email" required
                                       class="w-full px-4 py-2.5 rounded-lg border border-gray-300 focus:ring-2 focus:ring-primary focus:border-primary"
                                       placeholder="Enter email">
                                <span asp-validation-for="Email" class="text-sm text-red-500"></span>
                            </div>
                            <div>
                                <label asp-for="PhoneNumber" class="block text-sm font-medium text-gray-700 mb-1">Phone Number</label>
                                <input asp-for="PhoneNumber" type="tel"
                                       class="w-full px-4 py-2.5 rounded-lg border border-gray-300 focus:ring-2 focus:ring-primary focus:border-primary"
                                       placeholder="Enter phone number">
                                <span asp-validation-for="PhoneNumber" class="text-sm text-red-500"></span>
                            </div>
                            <div>
                                <label asp-for="HouseNumber" class="block text-sm font-medium text-gray-700 mb-1">House Number</label>
                                <input asp-for="HouseNumber"
                                       class="w-full px-4 py-2.5 rounded-lg border border-gray-300 focus:ring-2 focus:ring-primary focus:border-primary"
                                       placeholder="Enter house number">
                                <span asp-validation-for="HouseNumber" class="text-sm text-red-500"></span>
                            </div>
                        </div>
                    </div>

                    <!-- Security -->
                    <div class="space-y-4">
                        <h3 class="text-lg font-semibold text-gray-700 border-b pb-2">Security</h3>

                        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                            <div>
                                <label asp-for="Password" class="block text-sm font-medium text-gray-700 mb-1">New Password <span class="text-red-500">*</span></label>
                                <input asp-for="Password" type="password" required
                                       class="w-full px-4 py-2.5 rounded-lg border border-gray-300 focus:ring-2 focus:ring-primary focus:border-primary"
                                       placeholder="Enter new password">
                                <span asp-validation-for="Password" class="text-sm text-red-500"></span>
                            </div>
                            <div>
                                <label asp-for="ConfirmPassword" class="block text-sm font-medium text-gray-700 mb-1">Confirm New Password <span class="text-red-500">*</span></label>
                                <input asp-for="ConfirmPassword" type="password" required
                                       class="w-full px-4 py-2.5 rounded-lg border border-gray-300 focus:ring-2 focus:ring-primary focus:border-primary"
                                       placeholder="Confirm new password">
                                <span asp-validation-for="ConfirmPassword" class="text-sm text-red-500"></span>
                            </div>
                        </div>
                    </div>

                    <!-- Form Actions -->
                    <div class="flex items-center justify-end space-x-4 pt-6">
                        <a asp-action="UserList"
                           class="px-6 py-2.5 border border-gray-300 text-gray-700 rounded-lg hover:bg-gray-50 focus:ring-4 focus:ring-gray-100 transition-colors">
                            Cancel
                        </a>
                        <button type="submit"
                                class="px-6 py-2.5 bg-primary text-white rounded-lg hover:bg-primary/90 focus:ring-4 focus:ring-primary/30 transition-colors">
                            Save Changes
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    @section Scripts {
        <partial name="_ValidationScriptsPartial" />
    }
</body>
</html>