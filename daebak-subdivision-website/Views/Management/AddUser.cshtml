@model daebak_subdivision_website.Models.UserViewModel

@{
    ViewData["Title"] = "Add New User";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <script>
        tailwind.config = {
            theme: {
                extend: {
                    colors: {
                        primary: '#94B0DF',
                        secondary: '#356480',
                        tertiary: '#2c3e50',
                    }
                }
            }
        }
    </script>
</head>
<body class="bg-white">
    <div class="min-h-screen py-6 flex items-center">
        <div class="max-w-2xl mx-auto px-4 w-full">
            <!-- Form Card -->
            <div class="bg-[#356480] rounded-lg shadow-xl p-5">
                <!-- Header with Back Arrow -->
                <div class="mb-4">
                    <div class="flex items-center justify-center mb-2">
                        <a asp-action="UserList" class="absolute left-5 text-white hover:text-gray-200 transition-colors">
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
                            </svg>
                        </a>
                        <h2 class="text-lg font-bold text-white text-center">Add New User</h2>
                    </div>
                    <p class="text-xs text-gray-200 text-center">Fill in the details to create a new user account</p>
                </div>

                <form asp-action="AddUser" method="post" class="space-y-3">
                    <!-- Form Validation Summary -->
                    @if (!ViewData.ModelState.IsValid)
                    {
                        <div class="bg-red-50 border-l-4 border-red-400 p-3 rounded mb-3">
                            <div asp-validation-summary="All" class="text-xs text-red-600"></div>
                        </div>
                    }

                    <!-- Basic Information - More Compact -->
                    <div class="space-y-2">
                        <h3 class="text-xs font-semibold text-white border-b border-gray-200/30 pb-1">Basic Information</h3>
                        <div class="grid grid-cols-1 md:grid-cols-2 gap-2">
                            <div class="col-span-2">
                                <label asp-for="Username" class="block text-xs font-medium text-gray-200"></label>
                                <input asp-for="Username" class="mt-1 w-full px-2 py-1.5 rounded-md border border-gray-300 bg-white/90 focus:ring-1 focus:ring-white focus:border-white text-sm" placeholder="Enter username">
                                <span asp-validation-for="Username" class="text-xs text-red-300 mt-1 block"></span>
                            </div>
                            <div>
                                <label asp-for="FirstName" class="block text-xs font-medium text-gray-200"></label>
                                <input asp-for="FirstName" class="mt-1 w-full px-2 py-1.5 rounded-md border border-gray-300 bg-white/90 focus:ring-1 focus:ring-white focus:border-white text-sm" placeholder="Enter first name">
                                <span asp-validation-for="FirstName" class="text-xs text-red-300 mt-1 block"></span>
                            </div>
                            <div>
                                <label asp-for="LastName" class="block text-sm font-medium text-gray-200">Last Name</label>
                                <input asp-for="LastName" class="mt-1 w-full px-2 py-1.5 rounded-md border border-gray-300 bg-white/90 focus:ring-1 focus:ring-white focus:border-white text-sm" placeholder="Enter last name">
                                <span asp-validation-for="LastName" class="text-xs text-red-300 mt-1 block"></span>
                            </div>
                            <div>
                                <label asp-for="Email" class="block text-sm font-medium text-gray-200">Email</label>
                                <input asp-for="Email" type="email" class="mt-1 w-full px-2 py-1.5 rounded-md border border-gray-300 bg-white/90 focus:ring-1 focus:ring-white focus:border-white text-sm" placeholder="Enter email">
                                <span asp-validation-for="Email" class="text-xs text-red-300 mt-1 block"></span>
                            </div>
                            <div>
                                <label asp-for="Role" class="block text-sm font-medium text-gray-200">Role</label>
                                <select asp-for="Role" class="mt-1 w-full px-2 py-1.5 rounded-md border border-gray-300 bg-white/90 focus:ring-1 focus:ring-white focus:border-white text-sm">
                                    <option value="">Select Role</option>
                                    <option value="Homeowner">Homeowner</option>
                                    <option value="Staff">Staff</option>
                                    <option value="Admin">Admin</option>
                                </select>
                                <span asp-validation-for="Role" class="text-xs text-red-300 mt-1 block"></span>
                            </div>
                        </div>
                    </div>

                    <!-- Contact Information - More Compact -->
                    <div class="space-y-2">
                        <h3 class="text-xs font-semibold text-white border-b border-gray-200/30 pb-1">Contact Information</h3>
                        <div class="grid grid-cols-1 md:grid-cols-2 gap-2">
                            <div>
                                <label asp-for="PhoneNumber" class="block text-xs font-medium text-gray-200">Phone Number</label>
                                <input asp-for="PhoneNumber" class="mt-1 w-full px-2 py-1.5 rounded-md border border-gray-300 bg-white/90 focus:ring-1 focus:ring-white focus:border-white text-sm" placeholder="Enter phone number">
                                <span asp-validation-for="PhoneNumber" class="text-xs text-red-300 mt-1 block"></span>
                            </div>
                            <div>
                                <label asp-for="HouseNumber" class="block text-xs font-medium text-gray-200">House Number</label>
                                <input asp-for="HouseNumber" class="mt-1 w-full px-2 py-1.5 rounded-md border border-gray-300 bg-white/90 focus:ring-1 focus:ring-white focus:border-white text-sm" placeholder="Enter house number">
                                <span asp-validation-for="HouseNumber" class="text-xs text-red-300 mt-1 block"></span>
                            </div>
                        </div>
                    </div>

                    <!-- Security - More Compact -->
                    <div class="space-y-2">
                        <h3 class="text-xs font-semibold text-white border-b border-gray-200/30 pb-1">Security</h3>
                        <div class="grid grid-cols-1 md:grid-cols-2 gap-2">
                            <div>
                                <label asp-for="Password" class="block text-xs font-medium text-gray-200">Password</label>
                                <input asp-for="Password" type="password" class="mt-1 w-full px-2 py-1.5 rounded-md border border-gray-300 bg-white/90 focus:ring-1 focus:ring-white focus:border-white text-sm" placeholder="Enter password">
                                <span asp-validation-for="Password" class="text-xs text-red-300 mt-1 block"></span>
                            </div>
                            <div>
                                <label asp-for="ConfirmPassword" class="block text-xs font-medium text-gray-200">Confirm Password</label>
                                <input asp-for="ConfirmPassword" type="password" class="mt-1 w-full px-2 py-1.5 rounded-md border border-gray-300 bg-white/90 focus:ring-1 focus:ring-white focus:border-white text-sm" placeholder="Confirm password">
                                <span asp-validation-for="ConfirmPassword" class="text-xs text-red-300 mt-1 block"></span>
                            </div>
                        </div>
                    </div>

                    <!-- Form Actions -->
                    <div class="flex items-center justify-end space-x-2 pt-3">
                        <button type="button" onclick="showCancelConfirmation()"
                                class="px-3 py-1.5 text-xs border border-white text-white rounded-md hover:bg-white/10 transition-colors">
                            Cancel
                        </button>
                        <button type="submit" class="px-3 py-1.5 text-xs bg-white text-[#356480] rounded-md hover:bg-white/90 transition-colors flex items-center">
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6" />
                            </svg>
                            Add User
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <!-- Add client-side validation -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>

    <script>
        // Add custom form validation feedback
        $(document).ready(function () {
            $('form').on('submit', function (e) {
                if (!$(this).valid()) {
                    e.preventDefault();
                    // Highlight the first error field
                    $('input.input-validation-error').first().focus();
                }
            });
        });
    </script>

    <!-- Add this modal at the bottom of your form but before the closing body tag -->
    <div id="cancelModal" class="hidden fixed inset-0 bg-black bg-opacity-50 overflow-y-auto h-full w-full z-50">
        <div class="relative top-20 mx-auto p-5 border w-96 shadow-lg rounded-md bg-white">
            <div class="mt-3 text-center">
                <div class="mx-auto flex items-center justify-center h-12 w-12 rounded-full bg-yellow-100">
                    <svg class="h-6 w-6 text-yellow-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                              d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" />
                    </svg>
                </div>
                <h3 class="text-lg leading-6 font-medium text-gray-900 mt-4">Discard Changes?</h3>
                <div class="mt-2 px-7 py-3">
                    <p class="text-sm text-gray-500">
                        Are you sure you want to cancel? Any unsaved changes will be lost.
                    </p>
                </div>
                <div class="items-center px-4 py-3 flex justify-center space-x-4">
                    <button id="cancelModalBtn"
                            class="px-4 py-2 bg-gray-100 text-gray-700 text-sm font-medium rounded-md hover:bg-gray-200 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-gray-300">
                        Stay Here
                    </button>
                    <a asp-action="UserList"
                       class="px-4 py-2 bg-[#356480] text-white text-sm font-medium rounded-md hover:bg-[#356480]/80 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-[#356480]">
                        Yes, Cancel
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- Add this script before the closing body tag -->
    <script>
        function showCancelConfirmation() {
            document.getElementById('cancelModal').classList.remove('hidden');
        }

        // Close modal when clicking "Stay Here"
        document.getElementById('cancelModalBtn').addEventListener('click', function() {
            document.getElementById('cancelModal').classList.add('hidden');
        });

        // Close modal when clicking outside
        document.getElementById('cancelModal').addEventListener('click', function(e) {
            if (e.target === this) {
                this.classList.add('hidden');
            }
        });
    </script>
</body>
</html>