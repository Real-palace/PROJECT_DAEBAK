@using daebak_subdivision_website.Models
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Management - Daebak";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>

    <!-- Tailwind CSS -->
    <script src="https://cdn.tailwindcss.com"></script>

    <!-- Custom Tailwind Configuration -->
    <script>
        tailwind.config = {
            theme: {
                extend: {
                    colors: {
                        primary: '#94B0DF',
                        secondary: '#356480',
                        tertiary: '#2c3e50',
                        light: '#FCFDFF',
                    }
                },
                fontFamily: {
                    sans: ['Poppins', 'sans-serif'],
                }
            }
        }
    </script>
</head>
<body class="bg-light min-h-screen flex flex-col relative overflow-hidden">
    <!-- Navigation Bar -->
    <nav class="bg-primary text-white w-full shadow-md">
        <div class="container mx-auto px-6 py-4 flex justify-between items-center">
            <!-- Logo -->
            <div class="flex items-center space-x-3">
                <img src="@Url.Content("~/images/daebak_logo.png")" alt="Daebak Logo" class="w-10">
                <h1 class="text-xl font-bold tracking-wide">Daebak Admin Dashboard</h1>
            </div>
            <!-- Navigation Links -->
            <div class="space-x-6 text-sm">
                <a asp-controller="Home" asp-action="Index" class="hover:text-secondary font-medium transition duration-200">Home</a>
                <a asp-controller="Management" asp-action="Management" class="hover:text-secondary font-medium transition duration-200">Management</a>
                <a asp-controller="Notifications" asp-action="Index" class="hover:text-secondary font-medium transition duration-200">Notifications</a>
                <a asp-controller="Settings" asp-action="Index" class="hover:text-secondary font-medium transition duration-200">Settings</a>
                <a asp-controller="Account" asp-action="Logout" class="text-accent hover:text-white font-medium transition duration-200">Logout</a>
            </div>
        </div>
    </nav>

    <!-- Decorative Floating Shapes -->
    <div class="absolute top-20 left-1/4 w-40 h-40 bg-primary/10 rounded-full floating-shape"></div>
    <div class="absolute bottom-20 right-10 w-60 h-60 bg-primary/10 rounded-full floating-shape floating-shape-delay-1"></div>
    <div class="absolute top-1/4 right-1/4 w-20 h-20 bg-primary/10 rounded-full floating-shape floating-shape-delay-2"></div>

    <!-- Main Content -->
    <div class="container mx-auto p-6 relative z-10">
        <!-- Page Heading -->
        <h2 class="text-3xl font-bold text-gray-800 text-center mb-8 uppercase">Management</h2>

        <!-- Button Grid -->
        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
            <!-- USERS -->
            <a asp-controller="UserManagement" asp-action="Index"
               class="block p-6 bg-white rounded-xl shadow-lg transform transition hover:scale-105 text-center">
                <h4 class="text-xl font-semibold text-tertiary">USERS</h4>
            </a>

            <!-- COMMUNITY -->
            <a asp-controller="Community" asp-action="Index"
               class="block p-6 bg-white rounded-xl shadow-lg transform transition hover:scale-105 text-center">
                <h4 class="text-xl font-semibold text-tertiary">COMMUNITY</h4>
            </a>

            <!-- SERVICES -->
            <a asp-controller="Services" asp-action="Index"
               class="block p-6 bg-white rounded-xl shadow-lg transform transition hover:scale-105 text-center">
                <h4 class="text-xl font-semibold text-tertiary">SERVICES</h4>
            </a>

            <!-- BILLS AND PAYMENTS -->
            <a asp-controller="Billing" asp-action="Index"
               class="block p-6 bg-white rounded-xl shadow-lg transform transition hover:scale-105 text-center">
                <h4 class="text-xl font-semibold text-tertiary">BILLS AND PAYMENTS</h4>
            </a>

            <!-- SECURITY -->
            <a asp-controller="Security" asp-action="Index"
               class="block p-6 bg-white rounded-xl shadow-lg transform transition hover:scale-105 text-center">
                <h4 class="text-xl font-semibold text-tertiary">SECURITY</h4>
            </a>

            <!-- DOCUMENT -->
            <a asp-controller="Documents" asp-action="Index"
               class="block p-6 bg-white rounded-xl shadow-lg transform transition hover:scale-105 text-center">
                <h4 class="text-xl font-semibold text-tertiary">DOCUMENT</h4>
            </a>

            <!-- Active Users Card -->
            <div class="bg-secondary text-white shadow-lg rounded-lg p-6 hover:bg-tertiary transition transform hover:scale-105">
                <h3 class="text-lg font-semibold mb-2 flex items-center">
                    <i class="fas fa-users mr-2"></i> Active Users
                </h3>
                <p class="text-3xl font-bold">350</p>
            </div>
            <div class="bg-primary text-white shadow-lg rounded-lg p-6 hover:bg-secondary transition transform hover:scale-105">
                <h3 class="text-lg font-semibold mb-2 flex items-center">
                    <i class="fas fa-check-circle mr-2"></i> Resolved Complaints
                </h3>
                <p class="text-3xl font-bold">120</p>
            </div>
            <div class="bg-tertiary text-white shadow-lg rounded-lg p-6 hover:bg-primary transition transform hover:scale-105">
                <h3 class="text-lg font-semibold mb-2 flex items-center">
                    <i class="fas fa-user-plus mr-2"></i> New Registrations
                </h3>
                <p class="text-3xl font-bold">50</p>
            </div>
        </div>
    </div>
</body>
</html>
