@using daebak_subdivision_website.Models
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Management - Daebak";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>

    <!-- Tailwind CSS -->
    <script src="https://cdn.tailwindcss.com"></script>

    <!-- Custom Tailwind Configuration -->
    <script>
        tailwind.config = {
            theme: {
                extend: {
                    colors: {
                        primary: '#94B0DF',
                        secondary: '#356480',
                        tertiary: '#2c3e50',
                        light: '#FCFDFF',
                    }
                },
                fontFamily: {
                    sans: ['Poppins', 'sans-serif'],
                }
            }
        }
    </script>

    <!-- FontAwesome for icons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
</head>
<body class="bg-light min-h-screen flex flex-col relative overflow-hidden">

    <!-- Navigation Bar -->
    <nav class="bg-primary text-white w-full shadow-md">
        <div class="container mx-auto px-6 py-4 flex justify-between items-center">
            <!-- Logo -->
            <div class="flex items-center space-x-3">
                <img src="@Url.Content("~/images/daebak_logo.png")" alt="Daebak Logo" class="w-10">
                <h1 class="text-xl font-bold tracking-wide">Daebak Admin Dashboard</h1>
            </div>
            <!-- Navigation Links -->
            <div class="space-x-6 text-sm flex items-center">
                <a asp-controller="Home" asp-action="Index" class="hover:text-secondary font-medium transition duration-200">Home</a>

                <!-- Management Dropdown -->
                <div class="relative">
                    <button id="managementDropdownBtn" class="cursor-pointer hover:text-secondary font-medium transition duration-200 flex items-center">
                        Management
                        <svg class="w-4 h-4 ml-1" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
                        </svg>
                    </button>
                    <!-- Dropdown Content -->
                    <div id="managementDropdown" class="absolute left-0 mt-2 w-56 bg-white text-gray-800 shadow-lg rounded-lg hidden">
                        <a asp-controller="UserManagement" asp-action="Index" class="block px-4 py-2 hover:bg-gray-200">USERS</a>
                        <a asp-controller="Community" asp-action="Index" class="block px-4 py-2 hover:bg-gray-200">COMMUNITY</a>
                        <a asp-controller="ServiceRequests" asp-action="Index" class="block px-4 py-2 hover:bg-gray-200">SERVICES</a>
                        <a asp-controller="Billing" asp-action="Index" class="block px-4 py-2 hover:bg-gray-200">BILLS AND PAYMENTS</a>
                        <a asp-controller="Security" asp-action="Index" class="block px-4 py-2 hover:bg-gray-200">SECURITY</a>
                        <a asp-controller="Documents" asp-action="Index" class="block px-4 py-2 hover:bg-gray-200">DOCUMENT</a>
                    </div>
                </div>

                <a asp-controller="Notifications" asp-action="Index" class="hover:text-secondary font-medium transition duration-200">Notifications</a>
                <a asp-controller="Settings" asp-action="Index" class="hover:text-secondary font-medium transition duration-200">Settings</a>
                <a asp-controller="Account" asp-action="Logout" class="text-accent hover:text-white font-medium transition duration-200">Logout</a>
            </div>
        </div>
    </nav>

    <!-- Main Content -->
    <div class="container mx-auto p-6 relative z-10">
        <!-- Page Heading -->
        <h2 class="text-3xl font-bold text-gray-800 text-center mb-8 uppercase">Management</h2>

        <!-- Button Grid -->
        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
            <a asp-controller="UserManagement" asp-action="Index"
               class="block p-6 bg-white rounded-xl shadow-lg transform transition hover:scale-105 text-center">
                <h4 class="text-xl font-semibold text-tertiary">USERS</h4>
            </a>

            <a asp-controller="Community" asp-action="Index"
               class="block p-6 bg-white rounded-xl shadow-lg transform transition hover:scale-105 text-center">
                <h4 class="text-xl font-semibold text-tertiary">COMMUNITY</h4>
            </a>

            <a asp-controller="ServiceRequests" asp-action="Index"
               class="block p-6 bg-white rounded-xl shadow-lg transform transition hover:scale-105 text-center">
                <h4 class="text-xl font-semibold text-tertiary">SERVICES</h4>
            </a>

            <a asp-controller="Billing" asp-action="Index"
               class="block p-6 bg-white rounded-xl shadow-lg transform transition hover:scale-105 text-center">
                <h4 class="text-xl font-semibold text-tertiary">BILLS AND PAYMENTS</h4>
            </a>

            <a asp-controller="Security" asp-action="Index"
               class="block p-6 bg-white rounded-xl shadow-lg transform transition hover:scale-105 text-center">
                <h4 class="text-xl font-semibold text-tertiary">SECURITY</h4>
            </a>

            <a asp-controller="Documents" asp-action="Index"
               class="block p-6 bg-white rounded-xl shadow-lg transform transition hover:scale-105 text-center">
                <h4 class="text-xl font-semibold text-tertiary">DOCUMENT</h4>
            </a>
        </div>
    </div>

    <!-- JavaScript -->
    <script src="~/js/site.js"></script>
</body>
</html>
